<div class="page-head">
  <div>
    <h1>System Analytics</h1>
    <p class="page-subtitle">Overview of users and activity.</p>
  </div>
  <div class="page-actions">
    <a href="/admin" class="btn ghost">Back to Admin</a>
  </div>
</div>

<div class="stats-grid">
  <div class="card">
    <p class="card-meta">Total Users</p>
    <div class="stat-value">{{totalUsers}}</div>
  </div>
  <div class="card">
    <p class="card-meta">Total Logs</p>
    <div class="stat-value">{{totalLogs}}</div>
  </div>
</div>

<div class="card section-spacer">
  <div class="card-head">
    <h2 class="card-title">Top 5 Most Active Users</h2>
    <p class="card-meta">Ranked by log count.</p>
  </div>
  <ul class="list">
    {{#each topUsers}}
      <li class="row">
        <div class="row-left">
          <strong>{{username}}</strong>
          <span class="card-meta">ID: {{id}}</span>
        </div>
        <div class="row-right">
          <span class="badge success">Logs: {{count}}</span>
        </div>
      </li>
    {{/each}}
  </ul>
</div>
