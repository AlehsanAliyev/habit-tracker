<div class="page-head">
  <div>
    <h1>New Suggested Habit</h1>
    <p class="page-subtitle">Create a template for users.</p>
  </div>
  <div class="page-actions">
    <a href="/admin/suggested" class="btn ghost">Back</a>
  </div>
</div>

<div class="card">
  <form action="/admin/suggested/new" method="POST">
    <div class="form-grid">
      <div class="form-field">
        <label for="title">Title</label>
        <input class="input" type="text" id="title" name="title" required>
      </div>

      <div class="form-field">
        <label for="frequency">Frequency</label>
        <select class="select" id="frequency" name="frequency">
          <option value="daily">Daily</option>
          <option value="weekly">Weekly</option>
          <option value="monthly">Monthly</option>
        </select>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn primary">Add Suggested Habit</button>
    </div>
  </form>
</div>
