<div class="page-head">
  <div>
    <h1>{{user.username}}'s Habits</h1>
    <p class="page-subtitle">Overview of tracked habits.</p>
  </div>
  <div class="page-actions">
    <a href="/admin" class="btn ghost">Back to Admin Panel</a>
  </div>
</div>

{{#if habits.length}}
  <div class="card-grid">
    {{#each habits}}
      <div class="card">
        <div class="card-head">
          <h3 class="card-title">{{title}}</h3>
          <span class="badge muted">{{frequency}}</span>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="card">
    <p class="card-meta">This user has no habits.</p>
  </div>
{{/if}}
