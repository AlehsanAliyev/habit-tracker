<div class="page-head">
  <div>
    <h1>Suggested Habits</h1>
    <p class="page-subtitle">Admin-managed habit templates.</p>
  </div>
  <div class="page-actions">
    <a href="/admin" class="btn ghost">Back to Admin</a>
    <a href="/admin/suggested/new" class="btn primary">Add Suggestion</a>
  </div>
</div>

{{#if suggestions.length}}
  <div class="card">
    <ul class="list">
      {{#each suggestions}}
        <li class="row">
          <div class="row-left">
            <strong>{{title}}</strong>
            <span class="badge muted">{{frequency}}</span>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <div class="card">
    <p class="card-meta">No suggested habits available yet.</p>
  </div>
{{/if}}
