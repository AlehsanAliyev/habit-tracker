<div class="page-head">
  <div>
    <h1>Admin Panel</h1>
    <p class="page-subtitle">Manage users and review activity.</p>
  </div>
  <div class="page-actions">
    <a href="/habits" class="btn ghost">Back to Dashboard</a>
    <a href="/admin/suggested" class="btn ghost">Suggested Habits</a>
    <a href="/admin/analytics" class="btn primary">System Analytics</a>
  </div>
</div>

<div class="card">
  <div class="table-wrap">
    <table class="table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td>{{username}}</td>
            <td>{{email}}</td>
            <td><a class="btn ghost small" href="/admin/user/{{_id}}/habits">View Habits</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
