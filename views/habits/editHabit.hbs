<div class="page-head">
  <div>
    <h1>Edit Habit</h1>
    <p class="page-subtitle">Update your habit details.</p>
  </div>
  <div class="page-actions">
    <a class="btn ghost" href="/habits">Back</a>
  </div>
</div>

<div class="card">
  <form action="/habits/edit/{{habit._id}}" method="POST">
    <div class="form-grid">
      <div class="form-field">
        <label for="title">Habit Title</label>
        <input class="input" type="text" id="title" name="title" value="{{habit.title}}" required>
      </div>

      <div class="form-field">
        <label for="frequency">Frequency</label>
        <select class="select" name="frequency" id="frequency">
          <option value="daily" {{#ifEquals habit.frequency "daily"}}selected{{/ifEquals}}>Daily</option>
          <option value="weekly" {{#ifEquals habit.frequency "weekly"}}selected{{/ifEquals}}>Weekly</option>
          <option value="monthly" {{#ifEquals habit.frequency "monthly"}}selected{{/ifEquals}}>Monthly</option>
        </select>
      </div>

      <div class="form-field">
        <label for="weeklyTarget">Weekly Target</label>
        <input class="input" type="number" id="weeklyTarget" name="weeklyTarget" min="1" max="7" value="{{habit.weeklyTarget}}">
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn primary">Update Habit</button>
    </div>
  </form>
</div>
