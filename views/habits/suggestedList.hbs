<div class="page-head">
  <div>
    <h1>Suggested Habits</h1>
    <p class="page-subtitle">Pick one to add quickly.</p>
  </div>
  <div class="page-actions">
    <a class="btn ghost" href="/habits">Back to Dashboard</a>
  </div>
</div>

{{#if suggestions.length}}
  <div class="card">
    <ul class="list">
      {{#each suggestions}}
        <li class="row">
          <div class="row-left">
            <strong>{{title}}</strong>
            <span class="badge muted">{{frequency}}</span>
          </div>
          <div class="row-right">
            <form action="/habits/add-from-suggestion" method="POST">
              <input type="hidden" name="_csrf" value="{{csrfToken}}">
              <input type="hidden" name="title" value="{{title}}">
              <input type="hidden" name="frequency" value="{{frequency}}">
              <button type="submit" class="btn primary small">Add</button>
            </form>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <div class="card">
    <p class="card-meta">No suggestions yet.</p>
  </div>
{{/if}}
