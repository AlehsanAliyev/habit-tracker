<div class="page-head">
  <div>
    <h1>Add Habit</h1>
    <p class="page-subtitle">Define what you want to track.</p>
  </div>
  <div class="page-actions">
    <a class="btn ghost" href="/habits">Back</a>
  </div>
</div>

<div class="card">
  <form action="/habits/add" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="form-grid">
      <div class="form-field">
        <label for="title">Title</label>
        <input class="input" type="text" id="title" name="title" required>
      </div>

      <div class="form-field">
        <label for="frequency">Frequency</label>
        <select class="select" name="frequency" id="frequency">
          <option value="daily">Daily</option>
          <option value="weekly">Weekly</option>
          <option value="monthly">Monthly</option>
        </select>
      </div>

      <div class="form-field">
        <label for="weeklyTarget">Weekly Target</label>
        <input class="input" type="number" id="weeklyTarget" name="weeklyTarget" min="1" max="7" placeholder="e.g. 5">
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn primary">Add Habit</button>
    </div>
  </form>
</div>
